<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/saturdayButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="شنبه"
        app:layout_constraintEnd_toStartOf="@+id/guideline37"
        app:layout_constraintStart_toStartOf="@+id/guideline37"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <Button
        android:id="@+id/sundayButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="یکشنبه"
        app:layout_constraintEnd_toEndOf="@+id/saturdayButton_id"
        app:layout_constraintTop_toBottomOf="@+id/saturdayButton_id" />

    <Button
        android:id="@+id/mondayButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="دوشنبه"
        app:layout_constraintEnd_toEndOf="@+id/saturdayButton_id"
        app:layout_constraintTop_toBottomOf="@+id/sundayButton_id" />

    <Button
        android:id="@+id/tuesdayButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="سه شنبه"
        app:layout_constraintEnd_toEndOf="@+id/saturdayButton_id"
        app:layout_constraintTop_toBottomOf="@+id/mondayButton_id" />

    <Button
        android:id="@+id/wednesdayButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="چهارشنبه"
        app:layout_constraintEnd_toEndOf="@+id/saturdayButton_id"
        app:layout_constraintTop_toBottomOf="@+id/tuesdayButton_id" />

    <Button
        android:id="@+id/thursdayButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="پنجشنبه"
        app:layout_constraintEnd_toEndOf="@+id/wednesdayButton_id"
        app:layout_constraintTop_toBottomOf="@+id/wednesdayButton_id" />


    <Button
        android:id="@+id/fridayButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="جمعه"
        app:layout_constraintEnd_toEndOf="@+id/saturdayButton_id"
        app:layout_constraintTop_toBottomOf="@+id/thursdayButton_id" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/backprogramlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="#000"
        android:clickable="true"
        app:layout_constraintEnd_toStartOf="@+id/guideline37"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:srcCompat="@drawable/ic_keyboard_return_black_24dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50121653" />
</android.support.constraint.ConstraintLayout>